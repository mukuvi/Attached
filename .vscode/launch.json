{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üñ•Ô∏è Start GUI Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/gui/gui-server.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--experimental-modules"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "üîí Boot Terminal OS",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/kernel/boot.js",
      "console": "integratedTerminal",
      "args": ["--dev"],
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--experimental-modules"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "üß™ Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/tests/test-runner.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      },
      "runtimeArgs": ["--experimental-modules"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "‚öôÔ∏è Setup System",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/installer/install.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--experimental-modules"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}